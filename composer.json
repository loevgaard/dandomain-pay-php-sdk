{
    "name": "loevgaard/dandomain-pay-php-sdk",
    "type": "library",
    "description": "A library for using the Dandomain Pay API to make payments in the Dandomain webshop system",
    "keywords": [
        "php",
        "dandomain",
        "payments"
    ],
    "homepage": "https://github.com/loevgaard/dandomain-pay-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk",
            "homepage": "http://www.loevgaard.dk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "brick/math": "^0.7.0",
        "moneyphp/money": "^3.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~5.5||~6.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "zendframework/zend-diactoros": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Loevgaard\\Dandomain\\Pay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Loevgaard\\Dandomain\\Pay\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "./vendor/bin/php-cs-fixer fix --verbose --dry-run",
        "fix-style": "./vendor/bin/php-cs-fixer fix --verbose"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
